// CAPS + hjkl
partial modifier_keys
xkb_symbols "swapkeys" {
    replace key <LCTL> { [ Caps_Lock ] };
    replace key <CAPS> { [ Control_L ] };
    key <AC06> {        [         h, H, Left            ]       };
    key <AC07> {        [         j, J, Down            ]       };
    key <AC08> {        [         k, K, Up              ]       };
    key <AC09> {        [         l, L, Right           ]       };
    key <CAPS> { [ ISO_Level3_Shift ] };
};
